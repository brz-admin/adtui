# Multi-AD Configuration
# Uncomment and configure multiple AD domains below

[ad_domains]
# List of available AD domains (comma-separated)
# domains = DOMMAN, CORP, TEST

# Individual AD domain configurations
# Each domain should have its own section prefixed with "ad_"

[ad_DOMMAN]
server = servad4.domman.ad
domain = DOMMAN
base_dn = DC=domman,DC=ad
use_ssl = false

# Connection retry settings (optional)
max_retries = 5
initial_retry_delay = 1.0
max_retry_delay = 60.0
health_check_interval = 30.0

# Password policy settings (optional)
# If not specified, defaults from constants.py will be used
# max_password_age_days = 120
# warning_days_critical = 7
# warning_days_normal = 14

# Password policy settings (optional)
# If not specified, defaults from constants.py will be used
# max_password_age_days = 120
# warning_days_critical = 7
# warning_days_normal = 14

